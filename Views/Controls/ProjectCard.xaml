<UserControl 
    x:Class="Modrix.Views.Controls.ProjectCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Width="Auto"
    ToolTipService.InitialShowDelay="200"
    ToolTipService.ShowDuration="5000"
    ToolTipService.BetweenShowDelay="100">

    <!-- TOOLTIP DEFINITION -->
    <UserControl.ToolTip>
        <ToolTip
            DataContext="{Binding PlacementTarget.ProjectData, RelativeSource={RelativeSource Self}}">
            <StackPanel Margin="8">
                <TextBlock FontSize="16" FontWeight="SemiBold" Text="{Binding Name}" />
                <TextBlock Margin="2,4,0,0">
                    <Run Text="Type: " />
                    <Run Text="{Binding ModType}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Minecraft Version: " />
                    <Run Text="{Binding MinecraftVersion}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Mod ID: " />
                    <Run Text="{Binding ModId}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Package: " />
                    <Run Text="{Binding Package}"/>
                </TextBlock>
            </StackPanel>
        </ToolTip>
    </UserControl.ToolTip>

    <ui:CardControl Padding="12" HorizontalAlignment="Left">
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Icon -->
                <ColumnDefinition Width="64"/>
                <!-- Info -->
                <ColumnDefinition Width="*"/>
                <!-- Buttons -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Project Icon -->
            <Border 
                Grid.Column="0" 
                Width="64" 
                Height="64" 
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="8">
                <Grid>
                    <TextBlock 
                        x:Name="DefaultIconText"
                        Text=""
                        FontSize="32"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                    <Image 
                        x:Name="ProjectIconImage"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Stretch="UniformToFill"/>
                </Grid>
            </Border>

            <!-- Project Info (adjacent to icon) -->
            <StackPanel 
                Grid.Column="1" 
                Margin="12,0,0,0"
                VerticalAlignment="Center">
                <TextBlock 
                    x:Name="ProjectNameText"
                    FontSize="16"
                    FontWeight="SemiBold"/>
                <TextBlock 
                    x:Name="ModTypeText"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Margin="0,2,0,2"/>
                <TextBlock 
                    x:Name="VersionText"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
            </StackPanel>

            <!-- Action Buttons (moved to right) -->
            <StackPanel 
                x:Name="ActionButtons"
                Grid.Column="2"
                Orientation="Horizontal"
                Margin="8,0,0,0"
                Opacity="0">
                <ui:Button
                    x:Name="EditButton"
                    Appearance="Success"
                    Icon="{ui:SymbolIcon BoxEdit24}"
                    ToolTip="Edit Project"
                    Width="32"
                    Height="32"
                    Margin="0,0,6,0"
                    Padding="4"/>
                <ui:Button
                    x:Name="OptionsButton"
                    Appearance="Secondary"
                    Icon="{ui:SymbolIcon MoreHorizontal24}"
                    ToolTip="Project Options"
                    Width="32"
                    Height="32"
                    Padding="4"
                    Click="OptionsButton_Click"/>
            </StackPanel>

            <!-- Flyout for project options -->
            <ui:Flyout
                x:Name="OptionsFlyout"
                Placement="Bottom"
                IsOpen="False">
                <StackPanel MinWidth="150">
                    <ui:Button
                        x:Name="FlyoutDeleteButton"
                        Appearance="Danger"
                        Icon="{ui:SymbolIcon Delete20}"
                        Content="Delete Project"
                        Margin="0,0,0,4"
                        Width="169"
                        Click="FlyoutDeleteButton_Click"/>
                    <ui:Button
                        x:Name="FlyoutOpenFolderButton"
                        Appearance="Primary"
                        Icon="{ui:SymbolIcon FolderOpen24}"
                        Content="Open Project Folder"
                        Click="FlyoutOpenFolderButton_Click"/>
                </StackPanel>
            </ui:Flyout>
        </Grid>

        <ui:CardControl.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="ActionButtons"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="ActionButtons"
                            Storyboard.TargetProperty="Opacity"
                            To="0"
                            Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </ui:CardControl.Triggers>
    </ui:CardControl>
</UserControl>
