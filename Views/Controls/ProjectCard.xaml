<UserControl 
    x:Class="Modrix.Views.Controls.ProjectCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Width="300">

    <ui:CardControl Padding="12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="76"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Project Icon -->
            <Border 
                Grid.Column="0" 
                Width="64" 
                Height="64" 
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="8">
                <Image 
                    x:Name="ProjectIconImage"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Stretch="UniformToFill"/>
            </Border>

            <!-- Project Info -->
            <StackPanel 
                Grid.Column="1" 
                Margin="12,0,0,0"
                VerticalAlignment="Center">
                <TextBlock 
                    x:Name="ProjectNameText"
                    FontSize="16"
                    FontWeight="SemiBold"/>
                <TextBlock 
                    x:Name="ModTypeText"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                    Margin="0,2,0,2"/>
                <TextBlock 
                    x:Name="VersionText"
                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel 
                x:Name="ActionButtons"
                Grid.Column="2"
                Orientation="Horizontal"
                Margin="8,0,0,0"
                Opacity="0">
                <ui:Button
                    x:Name="EditButton"
                    Appearance="Success"
                    Icon="{ui:SymbolIcon BoxEdit24}"
                    ToolTip="Edit Project"
                    Width="32"
                    Height="32"
                    Margin="0,0,8,0"
                    Padding="4"/>
                <ui:Button
                    x:Name="DeleteButton"
                    Appearance="Danger"
                    Icon="{ui:SymbolIcon Delete20}"
                    ToolTip="Delete Project"
                    Width="32"
                    Height="32"
                    Padding="4"/>
            </StackPanel>
        </Grid>

        <ui:CardControl.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="ActionButtons"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="ActionButtons"
                            Storyboard.TargetProperty="Opacity"
                            To="0"
                            Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </ui:CardControl.Triggers>
    </ui:CardControl>
</UserControl>
