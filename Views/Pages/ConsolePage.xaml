<Page x:Class="Modrix.Views.Pages.ConsolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="ConsolePage">

    <DockPanel LastChildFill="True">
        <!-- Toolbar fixed at top -->
        <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="8,4,8,4">
            <CheckBox x:Name="ChkLineIndex"
                   Content="Show Line Index"
                   Margin="0,0,8,0"
                   VerticalAlignment="Center"
                   Checked="ChkLineIndex_Changed"
                   Unchecked="ChkLineIndex_Changed"/>
            <CheckBox x:Name="ChkAutoScroll"
                   Content="Auto Scroll"
                   IsChecked="True"
                   Margin="0,0,16,0"
                   VerticalAlignment="Center"
                   Checked="ChkAutoScroll_Changed"
                   Unchecked="ChkAutoScroll_Changed"/>
            <CheckBox x:Name="ChkShowStats"
                   Content="Show Runtime Stats"
                   IsChecked="True"
                   Margin="0,0,16,0"
                   VerticalAlignment="Center"
                   Checked="ChkShowStats_Changed"
                   Unchecked="ChkShowStats_Changed"/>
            <ui:Button Appearance="Secondary"
                 Icon="{ui:SymbolIcon Copy24}"
                 ToolTip="Copy All"
                 Margin="0,0,8,0"
                 Click="CopyButton_Click"/>
            <ui:Button Appearance="Secondary"
                 Icon="{ui:SymbolIcon Share24}"
                 ToolTip="Share Log"
                 Margin="0,0,8,0"
                 Click="ShareButton_Click"/>
            <ui:Button Appearance="Secondary"
                 Icon="{ui:SymbolIcon Delete24}"
                 ToolTip="Clear Console"
                 Click="ClearButton_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="ConsoleColumn" Width="*"/>
                <ColumnDefinition x:Name="StatsColumn" Width="0"/>
            </Grid.ColumnDefinitions>

            <!-- GridSplitter for resizing the two panels -->
            <GridSplitter x:Name="ConsoleSplitter" 
                      Grid.Column="0"
                      HorizontalAlignment="Right" 
                      Width="5"
                      Background="#333333"
                      Visibility="Collapsed"/>

            <!-- Console Output fills first column -->
            <RichTextBox x:Name="ConsoleOutput"
                     Grid.Column="0"
                     IsReadOnly="True"
                     Background="Black"
                     Foreground="White"
                     FontFamily="Consolas"
                     FontSize="14"
                     VerticalScrollBarVisibility="Auto"
                     Margin="8"/>

            <!-- Runtime Stats Panel -->
            <DockPanel x:Name="StatsPanel" 
                   Grid.Column="1"
                   LastChildFill="True"
                   Visibility="Collapsed">
                <TextBlock DockPanel.Dock="Top" 
                       Text="Minecraft Runtime Stats" 
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="8,8,8,4"/>
                <StackPanel DockPanel.Dock="Top" 
                        Orientation="Horizontal" 
                        Margin="8,0,8,8">
                    <TextBlock Text="Status: " FontWeight="Bold"/>
                    <TextBlock x:Name="GameStatusText" Text="Not Running"/>
                </StackPanel>

                <!-- CPU Usage -->
                <StackPanel DockPanel.Dock="Top" Margin="8,4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="CPU:" VerticalAlignment="Center"/>
                        <ProgressBar Grid.Column="1" x:Name="CpuProgressBar" 
                                    Value="0" Maximum="100" 
                                    Margin="8,0" Height="20"/>
                        <TextBlock Grid.Column="2" x:Name="CpuUsageText" Text="0%" 
                               VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>

                <!-- Memory Usage -->
                <StackPanel DockPanel.Dock="Top" Margin="8,4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="RAM:" VerticalAlignment="Center"/>
                        <ProgressBar Grid.Column="1" x:Name="MemoryProgressBar" 
                                    Value="0" Maximum="100" 
                                    Margin="8,0" Height="20"/>
                        <TextBlock Grid.Column="2" x:Name="MemoryUsageText" Text="0 MB" 
                               VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>

                <!-- Chart placeholder for historical data -->
                <Border DockPanel.Dock="Top" 
                    Background="#111111" 
                    BorderBrush="#333333" 
                    BorderThickness="1" 
                    Margin="8,8,8,0">
                    <Canvas x:Name="PerformanceChart" 
                        Height="200" 
                        Margin="4"/>
                </Border>

                <!-- Additional stats -->
                <ScrollViewer DockPanel.Dock="Top" 
                          VerticalScrollBarVisibility="Auto" 
                          Margin="8">
                    <StackPanel x:Name="AdditionalStatsPanel">
                        <!-- Will be populated with additional stats -->
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Grid>
    </DockPanel>
</Page>