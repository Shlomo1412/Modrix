<Page x:Class="Modrix.Views.Pages.ResourcesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      Title="ResourcesPage">

    <Grid Margin="16">
        <TabControl>
            <!-- Textures -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="Image20" />
                        <TextBlock Text="Textures" Margin="4,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <ItemsControl x:Name="TexturesList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <Image Source="{Binding Image}"
                                           Width="64" Height="64"
                                           ToolTip="{Binding FileName}"/>
                                    <TextBlock Text="{Binding FileName}"
                                               HorizontalAlignment="Center"
                                               FontSize="10"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <!-- Models -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="Cube20" />
                        <TextBlock Text="Models" Margin="4,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <ListBox x:Name="ModelsList"
                             
                             Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FileName}"
                                           Margin="4"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </TabItem>

            <!-- Sounds -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="Speaker220" />
                        <TextBlock Text="Sounds" Margin="4,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <StackPanel Margin="10">
                    <ListBox x:Name="SoundsList" Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding FileName}"
                                               VerticalAlignment="Center"
                                               Width="200"/>
                                    <ui:Button Content="▶"
                                               Tag="{Binding FullPath}"
                                               Click="PlaySound_Click"
                                               Width="32"
                                               Height="24"
                                               Margin="5,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </TabItem>

            <!-- Icon -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="Image20" />
                        <TextBlock Text="Icon" Margin="4,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="20">
                    <Border BorderBrush="Transparent"
                            BorderThickness="1"
                            Width="128" Height="128">
                        <Image x:Name="IconImage"
                               Stretch="Uniform" />
                    </Border>
                    <TextBlock x:Name="EmptyIconText"
                               Text="No icon set."
                               Foreground="Gray"
                               Margin="8"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="8">
                        <ui:Button Content="Change Icon"
                                   Click="ChangeIcon_Click"
                                   Icon="{ui:SymbolIcon ArrowRepeatAll24}"
                                   Margin="4"/>
                        <ui:Button Content="Remove Icon"
                                   Icon="{ui:SymbolIcon Delete24}"
                                   Appearance="Danger"
                                   Click="RemoveIcon_Click"
                                   Margin="4"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="Document20" />
                        <TextBlock Text="README" Margin="4,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>

                <!-- בתוכן: עורך טקסט מלא-מסך + כפתור שמירה -->
                <DockPanel>
                    <Button
                        Content="Save README"
                        DockPanel.Dock="Bottom"
                        Margin="0,8,0,0"
                        Width="120"
                        HorizontalAlignment="Right"
                        Click="SaveReadme_Click" />

                    <TextBox
                        x:Name="ReadmeEditor"
                        AcceptsReturn="True"
                        AcceptsTab="True"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
                        FontFamily="Consolas"
                        FontSize="14"/>
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
